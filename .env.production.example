# ==========================================
# CrawlReady Environment Variables Template
# ==========================================
# Copy this file to .env.production.local and fill in your values

# ==========================================
# Database Configuration
# ==========================================

# PostgreSQL Database URL (Supabase or any Postgres)
# Leave empty to use in-memory PGlite for local development
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# Auto-migration control
# - true: Run migrations automatically on app startup (good for PGlite)
# - false: Skip automatic migrations, use manual commands (required for Supabase)
# Default: true
AUTO_MIGRATE=false

# ==========================================
# Supabase Configuration (for cold storage)
# ==========================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_STORAGE_BUCKET=rendered-pages

# ==========================================
# Clerk Authentication
# ==========================================

CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in

# ==========================================
# Redis / Upstash Configuration
# ==========================================

# REST API (for cache operations)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-rest-token

# Standard Redis (for BullMQ queue)
UPSTASH_REDIS_HOST=your-redis.upstash.io
UPSTASH_REDIS_PORT=6379
UPSTASH_REDIS_PASSWORD=your-password
UPSTASH_REDIS_TLS=true

# ==========================================
# Stripe Configuration
# ==========================================

STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...

# ==========================================
# Application Configuration
# ==========================================

NEXT_PUBLIC_APP_URL=http://localhost:3000

# Billing environment (dev, test, prod)
BILLING_PLAN_ENV=prod

# Node environment
NODE_ENV=production

# ==========================================
# Optional: Logging
# ==========================================

# LogTail source token (optional)
LOGTAIL_SOURCE_TOKEN=

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ==========================================
# Analytics
# ==========================================

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ==========================================
# Monitoring
# ==========================================

NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# ==========================================
# Sign Up Waitlist
# ==========================================

# Google Sheets Integration
GOOGLE_SHEETS_WEBHOOK_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec