# Auto detect text files and perform LF normalization
* text=auto

# TypeScript files
*.ts text eol=lf
*.tsx text eol=lf
*.mts text eol=lf

# JavaScript files
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.config.* text eol=lf

# Exclude from export
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore

